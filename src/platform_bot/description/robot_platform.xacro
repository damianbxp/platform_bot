<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="colors.xacro"/>
    <xacro:include filename="inertial.xacro"/>


    <link name="base_link">

    </link>

    <joint name="chasis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
        <origin xyz="0.0 0.0 0.0"/>
    </joint>

    <!-- Chassis Link -->

    <link name="chassis_link">
        <visual>
            <origin xyz="0.0 0.0 0.05"/>
            <geometry>
                <box size="0.3 0.2 0.1"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.05"/>
            <geometry>
                <box size="0.3 0.2 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis_link">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- Wheels -->

    <!-- FL -->

    <joint name="wheel_fl_joint" type="continuous">
        <parent link="chassis_link"/>
        <child link="wheel_fl_link"/>
        <origin xyz="0.125 0.12 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_fl_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="wheel_fl_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- FR -->

    <joint name="wheel_fr_joint" type="continuous">
        <parent link="chassis_link"/>
        <child link="wheel_fr_link"/>
        <origin xyz="0.125 -0.12 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_fr_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="wheel_fr_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- RL -->

    <joint name="wheel_rl_joint" type="continuous">
        <parent link="chassis_link"/>
        <child link="wheel_rl_link"/>
        <origin xyz="-0.125 0.12 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_rl_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="wheel_rl_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- RR -->

    <joint name="wheel_rr_joint" type="continuous">
        <parent link="chassis_link"/>
        <child link="wheel_rr_link"/>
        <origin xyz="-0.125 -0.12 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_rr_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="wheel_rr_link">
        <material>Gazebo/Blue</material>
    </gazebo>

</robot>